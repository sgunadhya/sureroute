{% extends 'global_layout.jinja2' %}
{% block content %}
        <div class="row">
        <div class="span2 offset6">
            <p>
                <a class="btn btn-primary btn-large" href='{{  request.route_url('add_sureroute') }}'>
                    Add SureRoute
                </a>
            </p>
        </div>
            </div>
    {% if sureroutes %}
        <div class="row span8">
        <table class="table table-striped table-bordered table-condensed">
        <thead>
                <th>Customer Name</th>
                <th>Hostname</th>
                <th>Object Path</th>
                <th>Email</th>
                <th>Report</th>

        </thead>
            {% for sureroute in sureroutes %}
                <tr>
                <td> {{ sureroute.customer_name }}</td>
                <td> {{ sureroute.hostname }}</td>
                <td> {{ sureroute.object_path }}</td>
                <td> {{ sureroute.email }}</td>
                <td> <a href="{{ request.route_url('sureroute_results', id=sureroute.id) }}">View Report</a></td>
                </tr>
            {% endfor %}
        </table>
        </div>
    {% endif %}
    </div>
{% endblock %}