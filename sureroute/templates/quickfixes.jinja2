{% extends 'global_layout.jinja2' %}
{% block content %}
        <div class="row">
        <div class="span2 offset6">
            <p>
                <a class="btn btn-primary btn-large" href='{{  request.route_url('add_quickfix') }}'>
                    Add Quickfix
                </a>
            </p>
        </div>
            </div>
    {% if quickfixes %}
        <div class="row span8">
        <table class="table table-striped table-bordered table-condensed">
        <thead>
                <th>URL</th>
                <th>Spidering Breadth</th>
                <th>Spidering Depth</th>
                <th>Email</th>
                <th>Report</th>

        </thead>
            {% for qf in quickfixes %}
                <tr>
                <td> {{ qf.url }}</td>
                <td> {{ qf.spidering_breadth }}</td>
                <td> {{ qf.spidering_depth }}</td>
                <td> {{ qf.email }}</td>
                <td> <a href="">View Report</a></td>
                </tr>
            {% endfor %}
        </table>
        </div>
    {% endif %}
    </div>
{% endblock %}